---
import { Image } from "astro:assets";
import icon from "../assets/icon.svg";
---

<section class="hero" aria-label="Hero section">
    <div class="hero-content">
        <div class="logo">
            <Image src={icon} width={80} height={80} alt="Kakeibo logo" />
        </div>

        <h1>Kakeibo</h1>

        <p class="tagline">Know where your money goes</p>

        <p class="description">
            A simple, private budgeting app that helps you build awareness of
            your spending habits through tracking and monthly reflection.
        </p>

        <p class="pricing-note">
            One-time purchase.
            <strong>No subscriptions. No in-app purchases.</strong>
        </p>

        <div class="coming-soon">
            <svg
                class="coming-soon-icon"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                aria-hidden="true"
            >
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <span>Coming soon</span>
        </div>

        <p class="beta-cta">
            Want early access? <a href="#beta">Join the beta</a>
        </p>

        <div class="store-buttons">
            <a
                href="#"
                class="store-button"
                aria-label="Download on the App Store"
                aria-disabled="true"
                tabindex="-1"
            >
                <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path
                        d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"
                    ></path>
                </svg>
                <span class="store-text">
                    <small>Download on the</small>
                    <span>App Store</span>
                </span>
            </a>

            <a
                href="#"
                class="store-button"
                aria-label="Get it on Google Play"
                aria-disabled="true"
                tabindex="-1"
            >
                <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                    <path
                        d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"
                    ></path>
                </svg>
                <span class="store-text">
                    <small>Get it on</small>
                    <span>Google Play</span>
                </span>
            </a>
        </div>

        <ul class="principles" aria-label="App principles">
            <li class="principle">
                <span class="dot red" aria-hidden="true"></span>
                100% Offline
            </li>
            <li class="principle">
                <span class="dot blue" aria-hidden="true"></span>
                Privacy First
            </li>
            <li class="principle">
                <span class="dot green" aria-hidden="true"></span>
                No Ads
            </li>
            <li class="principle">
                <span class="dot yellow" aria-hidden="true"></span>
                No Tracking
            </li>
        </ul>
    </div>

    <div class="scroll-indicator" aria-hidden="true">
        <span>Scroll down</span>
        <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <polyline points="6 9 12 15 18 9"></polyline>
        </svg>
    </div>
</section>

<style>
    .hero {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        text-align: center;
        padding: var(--spacing-2xl) var(--spacing-lg);
    }

    .hero-content {
        max-width: 600px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    /* Logo */

    .logo {
        margin-bottom: var(--spacing-xl);
    }

    .logo img {
        width: 80px;
        height: 80px;
    }

    /* Headings & text */

    h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: var(--spacing-md);
        letter-spacing: -0.02em;
    }

    .tagline {
        font-size: 1.5rem;
        color: var(--text);
        font-weight: 400;
        margin-bottom: var(--spacing-md);
        line-height: 1.4;
    }

    .description {
        font-size: 1.1rem;
        color: var(--subtext);
        margin-bottom: var(--spacing-lg);
        line-height: 1.7;
    }

    .pricing-note {
        font-size: 0.9rem;
        color: var(--subtext);
        margin-bottom: var(--spacing-xl);
    }

    .pricing-note strong {
        color: var(--green);
        font-weight: 500;
    }

    /* Coming soon badge */

    .coming-soon {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-sm);
        background-color: var(--surface);
        color: var(--text);
        padding: var(--spacing-md) var(--spacing-lg);
        border-radius: var(--radius-lg);
        font-weight: 500;
        margin-bottom: var(--spacing-xl);
    }

    .coming-soon-icon {
        width: 24px;
        height: 24px;
        color: var(--yellow);
        flex-shrink: 0;
    }

    /* Beta CTA */

    .beta-cta {
        font-size: 0.95rem;
        color: var(--subtext);
        margin-bottom: var(--spacing-xl);
    }

    .beta-cta a {
        color: var(--green);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .beta-cta a:hover {
        color: var(--text);
        text-decoration: underline;
    }

    /* Store buttons */

    .store-buttons {
        display: flex;
        gap: var(--spacing-md);
        flex-wrap: wrap;
        justify-content: center;
        margin-bottom: var(--spacing-xl);
    }

    .store-button {
        display: inline-flex;
        align-items: center;
        gap: var(--spacing-sm);
        background-color: var(--surface);
        color: var(--text);
        text-decoration: none;
        padding: var(--spacing-md) var(--spacing-lg);
        border-radius: var(--radius-lg);
        font-weight: 500;
        transition:
            transform 0.2s ease,
            background-color 0.2s ease;
        opacity: 0.5;
        pointer-events: none;
    }

    .store-button:hover {
        transform: translateY(-2px);
        background-color: var(--surface-hover);
    }

    .store-button svg {
        width: 24px;
        height: 24px;
        flex-shrink: 0;
    }

    .store-text {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        line-height: 1.2;
    }

    .store-text small {
        font-size: 0.7rem;
        color: var(--subtext);
        font-weight: 400;
    }

    .store-text span {
        font-size: 1rem;
    }

    /* Principles */

    .principles {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: var(--spacing-sm);
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .principle {
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
        background-color: var(--surface);
        padding: var(--spacing-sm) var(--spacing-md);
        border-radius: var(--radius-pill);
        font-size: 0.875rem;
    }

    .dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .dot.red {
        background-color: var(--red);
    }
    .dot.blue {
        background-color: var(--blue);
    }
    .dot.green {
        background-color: var(--green);
    }
    .dot.yellow {
        background-color: var(--yellow);
    }

    /* Scroll indicator */

    .scroll-indicator {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--spacing-xs);
        color: var(--subtext);
        font-size: 0.75rem;
        padding-top: var(--spacing-md);
        padding-bottom: var(--spacing-md);
    }

    .scroll-indicator svg {
        width: 20px;
        height: 20px;
    }

    /* Responsive */

    @media (max-width: 600px) {
        h1 {
            font-size: 2.5rem;
        }

        .tagline {
            font-size: 1.25rem;
        }

        .store-buttons {
            flex-direction: column;
            align-items: center;
        }

        .store-button {
            width: 100%;
            max-width: 280px;
            justify-content: center;
        }
    }
</style>
